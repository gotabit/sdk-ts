{
  "name": "@gotabit/wallet-core",
  "description": "Cosmos Wallet core",
  "version": "1.1.3",
  "author": "GotaBit DEV <dev@gotabit.org>",
  "license": "MIT",
  "keywords": [
    "cosmos",
    "wallet",
    "signer",
    "amino",
    "direct",
    "crypto",
    "cosmjs",
    "cosmwasm",
    "ibc",
    "cosmoshub"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/gotabit/tree/main/packages/wallet-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gotabit/sdk-ts.git"
  },
  "bugs": {
    "url": "https://github.com/gotabit/sdk-ts/issues"
  },
  "_moduleAliases": {
    "~wallet-core": "dist"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build:cjs": "tsc --build tsconfig.build.json && link-module-alias",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs",
    "lint": "eslint --fix --max-warnings 0 \"./src/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/cjs/index.js"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "link-module-alias": "^1.2.0",
    "shx": "^0.3.4",
    "typescript": "^4.8.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@cosmjs/amino": "0.29.2",
    "@cosmjs/cosmwasm-stargate": "^0.29.2",
    "@cosmjs/crypto": "^0.29.2",
    "@cosmjs/encoding": "^0.29.2",
    "@cosmjs/proto-signing": "^0.29.2",
    "@cosmjs/stargate": "^0.29.2",
    "cosmjs-types": "0.5.1",
    "long": "^5.2.0"
  }
}
