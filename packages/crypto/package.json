{
  "name": "@gotabit/crypto",
  "description": "Cosmos Wallet core",
  "version": "0.1.1",
  "author": "GotaBit DEV <dev@gotabit.org>",
  "license": "MIT",
  "keywords": [
    "cosmos",
    "wallet",
    "signer",
    "amino",
    "direct",
    "crypto",
    "cosmjs",
    "cosmwasm",
    "ibc",
    "cosmoshub"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/gotabit/tree/main/packages/wallet-core",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gotabit/sdk-ts.git"
  },
  "bugs": {
    "url": "https://github.com/gotabit/sdk-ts/issues"
  },
  "_moduleAliases": {
    "~crypto": "dist"
  },
  "scripts": {
    "clean": "rm -rf dist tsconfig.build.tsbuildinfo",
    "build:cjs": "tsc --build tsconfig.build.json && link-module-alias",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs",
    "lint": "eslint --fix --max-warnings 0 \"./src/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/cjs/index.js"
  },
  "devDependencies": {
    "@types/libsodium-wrappers": "^0.7.10",
    "link-module-alias": "^1.2.0",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@cosmjs/crypto": "^0.29.3",
    "@cosmjs/encoding": "^0.29.3",
    "@noble/hashes": "^1.1.5",
    "@noble/secp256k1": "^1.7.0",
    "eciesjs": "^0.3.16",
    "fast-deep-equal": "^3.1.3",
    "libsodium-wrappers": "^0.7.10"
  }
}
