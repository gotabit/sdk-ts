{
  "name": "@gotabit/wallet",
  "description": "Cosmos Wallets with Direct and Amino signing",
  "version": "1.1.2",
  "author": "GotaBit DEV <dev@gotabit.org>",
  "license": "MIT",
  "keywords": [
    "cosmos",
    "wallet",
    "signer",
    "amino",
    "direct",
    "crypto",
    "cosmjs",
    "cosmwasm",
    "ibc",
    "cosmoshub"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "unpkg": "dist/umd/index.min.js",
  "homepage": "https://github.com/gotabit/tree/main/packages/wallet",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gotabit/sdk-ts.git"
  },
  "bugs": {
    "url": "https://github.com/gotabit/sdk-ts/issues"
  },
  "_moduleAliases": {
    "~wallet": "dist/cjs"
  },
  "scripts": {
    "clean": "tsc --build tsconfig.build.json --clean && rm -rf dist tsconfig.build.tsbuildinfo",
    "build:cjs": "tsc --build tsconfig.build.json && link-module-alias",
    "build:umd": "webpack",
    "build": "yarn clean && yarn build:cjs && yarn build:umd",
    "lint": "eslint --fix --max-warnings 0 \"./src/**/*.ts\"",
    "test": "jest",
    "test:unit": "jest test/unit",
    "test:integration": "jest test/unit",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --ci --reporters='jest-junit'",
    "coverage": "jest --coverage",
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "start": "node dist/cjs/index.js"
  },
  "devDependencies": {
    "@types/jest": "29.0.3",
    "@types/long": "5.0.0",
    "@types/node": "18.7.18",
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "@typescript-eslint/parser": "^5.38.0",
    "@typescript-eslint/typescript-estree": "^5.38.0",
    "eslint": "^8.23.1",
    "husky": "8.0.1",
    "tslib": "2.4.0",
    "typescript": "4.8.3",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0"
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@gotabit/wallet-core": "^1.1.2",
    "@gotabit/wallet-keplr": "^1.1.2",
    "@gotabit/wallet-local": "^1.1.2",
    "@gotabit/wallet-walletconnect": "^1.1.2",
    "link-module-alias": "^1.2.0",
    "long": "5.2.0"
  }
}
